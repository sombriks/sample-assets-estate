if users == null
    mixin user-list
        a(hx-get="/users/list" hx-swap="outerHTML", hx-trigger="load")
if users != null
    table.table.is-striped(style="min-width:320px;")
        tr
            th(colspan=2)
                input.input(name="q", value=q, placeholder="Search users"
                    hx-get="/users/list"
                    hx-target="closest table"
                    hx-swap="outerHTML"
                    hx-trigger="input changed delay:2s")
        tr
            th #
            th Name
        each u in users
          tr
            td= u.getId()
            td= u.getName()
