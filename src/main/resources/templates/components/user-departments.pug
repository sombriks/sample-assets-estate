if user == null
    mixin user-departments
        .panel.is-info(style="min-width:320px;")&attributes(attributes)
            .panel-heading User Departments
            .panel-block
                form(hx-get="/users/my-departments" hx-swap="outerHTML" hx-trigger="load")
if user != null
    each dep in user.getDepartments()
        div= dep.getName()
